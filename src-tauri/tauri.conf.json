{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CIMS",
  "version": "0.1.0",
  "identifier": "com.cognilabs.cims",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "withGlobalTauri": true
  },
  "app": {
    "windows": [
      {
        "title": "CIMS",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' http://localhost:8000 http://127.0.0.1:8000"
      },
      "dangerousDisableAssetCspModification": false
    },
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://localhost:3000",
          "http://127.0.0.1:3000",
          "http://localhost:8000",
          "http://127.0.0.1:8000"
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
